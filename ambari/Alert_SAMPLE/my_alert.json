
{
   "AlertDefinition" : {
    "service_name" : "ALERT_TEST",
    "component_name" : "MyKubernetes",
    "name": "test_alert",
    "label": "SIMPLE ALERT",
    "description": "This is a useless alert.",
    "interval": 1,
    "scope": "ANY",
    "enabled": true,
    "source": {
        "type": "PORT",
        "uri": "{{slave:29888}}",
        "default_port": 29888,
        "reporting": {
            "ok": {
                "text": "TCP OK - {0:.3f}s response on port {1}"
            },
            "warning": {
                "text": "TCP OK -{0:.3f}s response on port {1}",
                "value": 1.5
            },
            "critical": {
                "text": "Connection failed: {0} to {1}:{2}",
                "value": 5.0
            }
        }
    }
  }
}
