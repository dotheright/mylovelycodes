{
    "ALERT_TEST": {
        "service": [],
        "MyKubernetes": [
            {
                "name": "MyKubernetes",
                "label": "My Kubernetes Alert",
                "description": "This is my Kubernetes alert.",
                "interval": 1,
                "scope": "ANY",
                "enabled": true,
                "source": {
                    "type": "PORT",
                    "uri": "{{127.0.0.1:29888}}",
                    "default_port": 29888,
                    "reporting": {
                        "ok": {
                            "text": "TCP OK - {0:.3f}s response on port {1}"
                        },
                        "warning": {
                            "text": "TCP OK -{0:.3f}s response on port {1}",
                            "value": 1.5
                        },
                        "critical": {
                            "text": "Connection failed: {0} to {1}:{2}",
                            "value": 5.0
                        }
                    }
                }
            }
        ]
    } 
} 
